<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.DialogWIndows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="LandConquest.DialogWIndows.EstablishStateDialog"
        mc:Ignorable="d"
        Title="EstablishStateDialog" Height="450" Width="800"
        ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid>

        <materialDesign:ColorPicker x:Name="StateColor" HorizontalAlignment="Left" Margin="160,71,0,0" VerticalAlignment="Top" Height="304" Width="453"/>
        <Label Content="Choose color for the state" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="252,36,0,0" VerticalAlignment="Top"/>
        <Button x:Name="EstablishState" Content="OK" HorizontalAlignment="Left" Height="69" Margin="641,71,0,0" VerticalAlignment="Top" Width="72" Click="EstablishState_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_brown_square.png"/>
            </Button.Background>
        </Button>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

    </Grid>
</Window>
