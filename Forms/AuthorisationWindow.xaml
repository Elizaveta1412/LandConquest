<Window x:Class="LandConquest.AuthorisationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
           
        Title="Land Conquest" Height="500" Width="800" MaxHeight="500" MaxWidth="800" MinHeight="500" MinWidth="800">

    <Grid>

        <Image x:Name="loginGui" HorizontalAlignment="Left" Height="391" Margin="540,25,0,0"  VerticalAlignment="Top" Width="211" Source="/LandConquest;component/Pictures/login_gui.png" />

        <Image x:Name="registerGui" HorizontalAlignment="Left" Height="417" Margin="10,10,0,0" VerticalAlignment="Top" Width="257" Source="/LandConquest;component/Pictures/register_gui.png" />

        <TextBox x:Name="textBoxLogin" Margin="571,122,43,0" TextWrapping="Wrap" Text="" Background="{x:Null}" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                 materialDesign:HintAssist.Hint=" Login"  materialDesign:HintAssist.IsFloating="False" CaretBrush="Black" Height="25" VerticalAlignment="Top" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"/>
        <PasswordBox x:Name="textBoxPass" Margin="571,171,42.6,0" Background="{x:Null}" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     materialDesign:HintAssist.Hint=" Password"  materialDesign:HintAssist.IsFloating="False" Height="27" VerticalAlignment="Top" CaretBrush="Black" SelectionBrush="{x:Null}" BorderBrush="{x:Null}">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <Button x:Name="buttonLogin"  Content="" FontWeight="Thin" FontSize="24" Foreground="Goldenrod" FontFamily="Harrington" Margin="610,256,110.6,178.4" VerticalAlignment="Center" Click="buttonLogin_Click" Height="36" BorderThickness="0" BorderBrush="White" Background="{x:Null}" RenderTransformOrigin="0.501,0.5"/>

        <TextBox x:Name="textBoxNewLogin" TextWrapping="Wrap" Text="" Margin="42,120,0,312" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"  
                     Background="{x:Null}" materialDesign:HintAssist.Hint=" New login" CaretBrush="Black" HorizontalAlignment="Left" Width="178" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" SelectionOpacity="0" />
        <TextBox x:Name="textBoxNewEmail" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="178" Margin="42,180,0,254" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     Background="{x:Null}" materialDesign:HintAssist.Hint=" Email"   CaretBrush="Black" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"  BorderThickness="0" SelectionOpacity="0" />
        <TextBox x:Name="textBoxNewPass" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="178" Margin="42,246,0,189" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     Background="{x:Null}" materialDesign:HintAssist.Hint=" New password"  CaretBrush="Black" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" SelectionOpacity="0" />
        <TextBox x:Name="textBoxConfirmNewPass" HorizontalAlignment="Left" Height="33" Margin="42,313,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                     Background="{x:Null}" materialDesign:HintAssist.Hint=" Confirm password"  CaretBrush="Black" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" SelectionOpacity="0" />

        <Button x:Name="buttonRegistrate" Content="" FontWeight="Thin" FontSize="24" Foreground="Goldenrod" FontFamily="Harrington" Margin="55,386,665,42" Height="Auto" Click="buttonRegistrate_Click" BorderThickness="0" Background="{x:Null}"/>
        <Button x:Name="buttonCancelRegistrate" Content="" HorizontalAlignment="Left" Margin="148,386,0,0" VerticalAlignment="Top" Width="72" Height="41" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="buttonCancelRegistrate_Click"/>


        <CheckBox x:Name="CheckboxRemember"  HorizontalAlignment="Left" Margin="684,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="16" BorderBrush="Black" IsChecked="True" BorderThickness="0" Background="#FFB4A500" Height="19" Cursor="Hand"/>

        <Button x:Name="buttonShowRegistration" Content="Button" HorizontalAlignment="Left" Margin="45,25,0,0" VerticalAlignment="Top" Width="170" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="46" Click="buttonShowRegistration_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.082"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.124"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/register_btn.png"/>
            </Button.Background>
        </Button>



        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/authorisation_background.png" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>

</Window>
