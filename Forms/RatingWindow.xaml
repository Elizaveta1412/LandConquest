        <Label x:Name="Top3" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,142,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="Top4" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,174,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="Top5" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,206,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="Top6" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,238,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="Top7" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,270,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="Top8" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="172,302,0,0" VerticalAlignment="Top" Width="39" Height="27"/>
        <Label x:Name="rang1" Content="1." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,78,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang2" Content="2." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,110,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang3" Content="3." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,142,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang4" Content="4." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,174,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang5" Content="5." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,206,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang6" Content="6." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,238,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang7" Content="7." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,270,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
        <Label x:Name="rang8" Content="8." Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="87,302,0,0" VerticalAlignment="Top" Width="20" Height="27"/>
