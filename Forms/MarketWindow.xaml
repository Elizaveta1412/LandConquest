        <Button x:Name="sellGemsMarketButton" Content="Sell" HorizontalAlignment="Left" Margin="150,353,0,0" VerticalAlignment="Top" Width="58" Click="sellGemsMarketButton_Click"  />
        <Image HorizontalAlignment="Left" Height="68" Margin="241,293,0,0" VerticalAlignment="Top" Width="65" Source="/LandConquest;component/Pictures/leather.png"/>
        <Label Content="Price" FontWeight="Bold" HorizontalAlignment="Left" Margin="311,293,0,0" VerticalAlignment="Top"/>
