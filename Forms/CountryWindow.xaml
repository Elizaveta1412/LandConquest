<Window x:Class="LandConquest.Forms.CountryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.Forms"
        mc:Ignorable="d"
        Title="CountryWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/map.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label x:Name="CountryNameLbl" FontSize="24"  Content="1234567890123456789012" HorizontalAlignment="Left" Margin="171,10,0,0" VerticalAlignment="Top" Width="294" Height="52"/>
        <Image HorizontalAlignment="Left" Height="102" Margin="10,10,0,0" VerticalAlignment="Top" Width="156" Source="/Pictures/сountryDefault.png"/>
        <Label x:Name="RulerNameLbl" FontSize="24"  Content="RulerName" HorizontalAlignment="Left" Margin="232,60,0,0" VerticalAlignment="Top" Width="233" Height="52"/>
        <Image x:Name="RulerImg" HorizontalAlignment="Left" Height="50" Margin="121,62,0,0" VerticalAlignment="Top" Width="50" Source="/LandConquest;component/Pictures/profileDefault.png"/>
        <Label FontSize="18"  Content="Ruler:" HorizontalAlignment="Left" Margin="176,60,0,0" VerticalAlignment="Top" Width="56" Height="52"/>
    </Grid>
</Window>
