<Window x:Class="LandConquest.Forms.AuctionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.Forms"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"
        Title="MarketWindow" Height="450" Width="670" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid>

        <DataGrid AutoGenerateColumns="False" EnableRowVirtualization="True" Height="393" Width="460" HorizontalAlignment="Left" ItemsSource="{Binding listings}" Margin="10,47,0,0" x:Name="auctionDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" VerticalAlignment="Top" Foreground="#CC000000">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="resourceQty" Binding="{Binding Qty}" Header="Qty" Width="100" CanUserSort="True"/>
                <DataGridTextColumn x:Name="itemName" Binding="{Binding Subject}" Header="Subject" Width="100" CanUserSort="True"/>
                <DataGridTextColumn x:Name="timeLeft" Binding="{Binding ListingSetTime}" Header="Time" Width="100" CanUserSort="True"/>
                <DataGridTextColumn x:Name="sellersName" Binding="{Binding SellerName}" Header="Seller" Width="100" CanUserSort="True"/>
                <DataGridTextColumn x:Name="totalPrice" Binding="{Binding Price}" Header="Price" CanUserSort="True"/>
            </DataGrid.Columns>
            <DataGrid.Background>
                <SolidColorBrush Color="#CC82503C"></SolidColorBrush>
                <!--<ImageBrush  ImageSource="/Pictures/map.png" Stretch="UniformToFill"/>-->
            </DataGrid.Background>
        </DataGrid>

        <Button x:Name="buttonShowMyListings" Content="Show My Listings" HorizontalAlignment="Left" Margin="509,84,0,0" VerticalAlignment="Top" Width="151" Background="#FF95684E" BorderBrush="{x:Null}" Foreground="#DD000000"/>
        <Button x:Name="buttonCreateListing" Content="Create Listing" HorizontalAlignment="Left" Margin="509,47,0,0" VerticalAlignment="Top" Width="151" BorderBrush="{x:Null}" Background="#FF95684E" Foreground="#DD000000" Click="buttonCreateListing_Click"/>
        <Button x:Name="buttonClose" Content="Close" HorizontalAlignment="Left" Margin="509,10,0,0" VerticalAlignment="Top" Width="151" Foreground="Black" BorderBrush="{x:Null}" Background="#FF976B51" Click="buttonClose_Click"/>
        <Button x:Name="buttonBuy" Content="Buy" HorizontalAlignment="Left" Margin="509,121,0,0" VerticalAlignment="Top" Width="151" Foreground="Black" BorderBrush="{x:Null}"  Background="#FF976B51"/>


        <Button x:Name="buttonFindListing" Content="Find" HorizontalAlignment="Left" Margin="386,10,0,0" VerticalAlignment="Top" Width="84" Background="#FF95684E" BorderBrush="{x:Null}" Foreground="#DD000000" Height="32" Click="buttonFindListing_Click" />
        <TextBox x:Name="textBoxItemSearchName" HorizontalAlignment="Left" Height="32" Margin="264,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="117" CaretBrush="{x:Null}" SelectionBrush="{x:Null}" Background="#7F966B52" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="buttonShowType" Content="All" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="118" Background="#FF95684E" BorderBrush="{x:Null}" Foreground="#DD000000" Height="32"/>
        <Button x:Name="buttonShowSubtypes" Content="" HorizontalAlignment="Left" Margin="133,10,0,0" VerticalAlignment="Top" Width="126" Background="#FF95684E" BorderBrush="{x:Null}" Foreground="#DD000000" Height="32"/>

        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/map.png" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Window>
