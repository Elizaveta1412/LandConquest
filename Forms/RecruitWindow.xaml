            <Label Content="Infantry     1C" HorizontalAlignment="Left"  FontWeight="Bold" Foreground="#311818" Margin="269,9,0,0" VerticalAlignment="Top"/>
            <Label Content="Total" FontSize="10" HorizontalAlignment="Left" FontWeight="SemiBold" Foreground="#311818" Margin="269,143,0,0" VerticalAlignment="Top"/>
