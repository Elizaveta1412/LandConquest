            <Rectangle Fill="Transparent" HorizontalAlignment="Left" Panel.ZIndex="-1" Height="245" Margin="510,10,0,0" Stroke="#311818" VerticalAlignment="Top" Width="114" StrokeThickness="3" />
        </Grid>
