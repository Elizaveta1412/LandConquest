                <Label x:Name="archerCraft3" Content="5" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="18,30,0,-5" VerticalAlignment="Top" Width="16" Height="23"/>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="68" Margin="456,69,0,0" VerticalAlignment="Top" Width="34">
