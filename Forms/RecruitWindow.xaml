            <Label x:Name="knightsCraft3" Content="1" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="471,97,0,0" VerticalAlignment="Top" Width="16" Height="23"/>
            <Label x:Name="knightsCraft4" Content="1" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="471,82,0,0" VerticalAlignment="Top" Width="16" Height="21"/>
            <Label x:Name="knightsCraft1" Content="1" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="471,69,0,0" VerticalAlignment="Top" Width="16" Height="23"/>
            <Image HorizontalAlignment="Left" Height="14" Margin="584,105,0,0" VerticalAlignment="Top" Width="14" Source="/LandConquest;component/Pictures/gear.png"/>
            <Label x:Name="siegeCraft1" Content="5" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="598,102,0,0" VerticalAlignment="Top" Width="17" Height="20"/>
