            <Label x:Name="infantryCraft1" Content="1" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="348,88,0,0" VerticalAlignment="Top" Width="16" Height="19"/>
            <Label x:Name="infantryCraft2" Content="1" FontSize="8" FontWeight="Bold" HorizontalAlignment="Left" Margin="348,103,0,0" VerticalAlignment="Top" Width="16" Height="23"/>
