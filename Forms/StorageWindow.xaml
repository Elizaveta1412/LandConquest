<Window x:Class="LandConquest.Forms.StorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.Forms"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"
        Title="StorageWindow" Height="380" Width="475" Loaded="StorageWindow_Loaded">
    <Grid Height="384" VerticalAlignment="Top" HorizontalAlignment="Left" Width="480" Margin="0,0,-4.8,-159.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/map.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="WOOD" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,78,0,0" VerticalAlignment="Top" Height="27" Width="65"/>
        <Label Content="STONE" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="170,78,0,0" VerticalAlignment="Top" Height="27" Width="64"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="9,78,0,0" VerticalAlignment="Top" Width="48" Source="/Pictures/wood.png"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="122,78,0,0" VerticalAlignment="Top" Width="48" Source="/Pictures/stones.png"/>
        <Label x:Name="labelWoodAmount" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,109,0,0" VerticalAlignment="Top" Width="107" Height="27"/>
        <Label x:Name="labelStoneAmount" Content="0" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,109,0,0" VerticalAlignment="Top" Width="111" Height="27"/>
        <Label Content="FOOD" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,78,148,0" VerticalAlignment="Top" Height="27" Width="57"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="238,78,0,0" VerticalAlignment="Top" Width="32" Source="/Pictures/food.png" RenderTransformOrigin="-1.55,0.548"/>
        <Label x:Name="labelFoodAmount" Content="0" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="238,109,0,0" VerticalAlignment="Top" Width="112" Height="27"/>
        <Button x:Name="button_close" Content="Button" HorizontalAlignment="Left" Margin="395,4,0,0" VerticalAlignment="Top" Width="75" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="button_close_Click">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/button_close.png"/>
            </Button.Background>
        </Button>
        <Label Content="GOLD" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,131,0,0" VerticalAlignment="Top" Height="27" Width="59"/>
        <Label Content="COPPER" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="163,130,0,0" VerticalAlignment="Top" Height="27" Width="75" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="9,131,0,0" VerticalAlignment="Top" Width="48" Source="/Pictures/gold_ore.png"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="122,131,0,0" VerticalAlignment="Top" Width="48" Source="/Pictures/Copper.png"/>
        <Label x:Name="labelGoldAmount" Content="0" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,162,0,0" VerticalAlignment="Top" Width="107" Height="27"/>
        <Label x:Name="labelCopperAmount" Content="0" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,162,0,0" VerticalAlignment="Top" Width="111" Height="27"/>
        <Label Content="GEMS" Foreground="#00BFFF" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,131,148,0" VerticalAlignment="Top" Height="27" Width="57" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="238,137,0,0" VerticalAlignment="Top" Width="37" Source="/Pictures/gems.png" RenderTransformOrigin="-1.55,0.548"/>
        <Label x:Name="labelGemsAmount" Content="0" Foreground="#00BFFF" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="238,162,0,0" VerticalAlignment="Top" Width="112" Height="27"/>
        <Label Content="IRON" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,78,53,0" VerticalAlignment="Top" Height="27" Width="57" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="332,78,0,0" VerticalAlignment="Top" Width="33" Source="/Pictures/iron.png" RenderTransformOrigin="-1.55,0.548" OpacityMask="Black"/>
        <Label x:Name="labelIronAmount" Content="0" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="333,109,0,0" VerticalAlignment="Top" Width="112" Height="27" Background="{x:Null}"/>
        <Label Content="LEATHER" Foreground="#FF914C2B" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,131,25,0" VerticalAlignment="Top" Height="27" Width="88" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="333,134,0,0" VerticalAlignment="Top" Width="32" Source="/Pictures/Leather.png" RenderTransformOrigin="-1.55,0.548"/>
        <Label x:Name="labelLeatherAmount" Content="0" Foreground="#FF914C2B" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="333,162,0,0" VerticalAlignment="Top" Width="112" Height="27"/>


        <Label Content="ARMOR" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,212,0,0" VerticalAlignment="Top" Height="27" Width="71"/>
        <Label Content="SWORD" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="170,212,0,0" VerticalAlignment="Top" Height="27" Width="68"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="9,212,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/wood.png"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="122,212,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/stones.png"/>
        <Label x:Name="labelArmorAmount" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,233,0,0" VerticalAlignment="Top" Width="107" Height="27"/>
        <Label x:Name="labelSwordAmount" Content="0" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,233,0,0" VerticalAlignment="Top" Width="111" Height="27"/>
        <Label Content="HARNESS" Foreground="Brown" FontSize="12" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,212,148,0" VerticalAlignment="Top" Height="27" Width="62"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="238,212,0,0" VerticalAlignment="Top" Width="32" Source="/LandConquest;component/Pictures/food.png" RenderTransformOrigin="-1.55,0.548"/>
        <Label x:Name="labelHarnessAmount" Content="0" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="238,233,0,0" VerticalAlignment="Top" Width="112" Height="27"/>
        <Label Content="BOW" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,316,0,0" VerticalAlignment="Top" Height="27" Width="71"/>
        <Label Content="GEAR" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="163,315,0,0" VerticalAlignment="Top" Height="27" Width="75" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="9,316,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/gold_ore.png"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="122,316,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/copper.png"/>
        <Label x:Name="labelBowAmount" Content="0" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,347,0,0" VerticalAlignment="Top" Width="107" Height="27"/>
        <Label x:Name="labelGearAmount" Content="0" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,347,0,0" VerticalAlignment="Top" Width="111" Height="27"/>
        <Label Content="SPEAR" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,212,53,0" VerticalAlignment="Top" Height="27" Width="57" Background="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="31" Margin="332,212,0,0" VerticalAlignment="Top" Width="33" Source="/LandConquest;component/Pictures/iron.png" RenderTransformOrigin="-1.55,0.548" OpacityMask="Black"/>
        <Label x:Name="labelSpearAmount" Content="0" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="333,233,0,0" VerticalAlignment="Top" Width="112" Height="27" Background="{x:Null}"/>
        <TextBox x:Name="SwordsToCraft" HorizontalAlignment="Left" Height="23" Margin="182,254,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="White" BorderBrush="Goldenrod"/>
        <Label x:Name="labelSwordAmount1" Content="1" HorizontalAlignment="Left" Margin="125,254,0,0" VerticalAlignment="Top" Height="17" Width="29" FontSize="8"/>
        <Label x:Name="labelSwordAmount2" Content="2" HorizontalAlignment="Left" Margin="125,264,0,0" VerticalAlignment="Top" Height="17" Width="29" FontSize="8"/>
        <Image HorizontalAlignment="Left" Height="10" Margin="144,259,0,0" VerticalAlignment="Top" Width="10" Source="/Pictures/copper.png"/>
        <Image HorizontalAlignment="Left" Height="10" Margin="144,269,0,0" VerticalAlignment="Top" Width="10" Source="/Pictures/iron.png"/>
        <Image x:Name="craftSword" HorizontalAlignment="Left" Height="30" Margin="182,285,0,0" VerticalAlignment="Top" Width="30" Source="/Pictures/craft.png" MouseDown="craftSword_MouseDown" />




    </Grid>
</Window>
