<Window x:Class="LandConquest.Forms.StorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.Forms"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"
        Title="StorageWindow" Height="450" Width="475" Loaded="StorageWindow_Loaded"
        ShowInTaskbar="False">

    <Border BorderBrush="#FF392018" BorderThickness="3" Height="450" Width="475">

        <Grid Height="450" VerticalAlignment="Top" HorizontalAlignment="Left" Width="475">
            <Grid.Background>
                <ImageBrush ImageSource="/Pictures/background_pale.jpg" Stretch="UniformToFill"/>
            </Grid.Background>

            <Image HorizontalAlignment="Left" Height="43" Margin="10,39,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="123,39,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="231,39,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="325,39,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="325,130,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="231,130,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="123,130,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>
            <Image HorizontalAlignment="Left" Height="43" Margin="10,130,0,0" VerticalAlignment="Top" Width="44" Source="/Pictures/epic_brown_square.png"/>





            <Label Content="WOOD" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="58,42,0,0" VerticalAlignment="Top" Height="31" Width="65"/>
            <Label Content="STONE" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="167,42,0,0" VerticalAlignment="Top" Height="31" Width="64"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="15,44,0,0" VerticalAlignment="Top" Width="32" Source="/Pictures/wood.png"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="127,43,0,0" VerticalAlignment="Top" Width="35" Source="/Pictures/stones.png"/>
            <Label x:Name="labelWoodAmount" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="14,82,0,0"  VerticalAlignment="Top" Width="107" Height="28"/>
            <Label x:Name="labelStoneAmount" Content="0" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="127,82,0,0" VerticalAlignment="Top" Width="111" Height="28"/>
            <Label Content="FOOD" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,42,147,0" VerticalAlignment="Top" Height="31" Width="57"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="235,42,0,0" VerticalAlignment="Top" Width="36" Source="/Pictures/food.png" RenderTransformOrigin="-1.55,0.548"/>
            <Label x:Name="labelFoodAmount" Content="0" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="235,82,0,0" VerticalAlignment="Top" Width="112" Height="28"/>

            <Button x:Name="button_close" Margin="449,0,6,0" VerticalAlignment="Top" Width="20" Height="20" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="button_close_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/LandConquest;component/Pictures/buttonCross.jpg" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <Label Content="GOLD" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,131,0,0" VerticalAlignment="Top" Height="31" Width="59"/>
            <Label Content="COPPER" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="163,131,0,0" VerticalAlignment="Top" Height="36" Width="75" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="14,134,0,0" VerticalAlignment="Top" Width="35" Source="/Pictures/gold_ore.png"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="127,134,0,0" VerticalAlignment="Top" Width="35" Source="/Pictures/Copper.png"/>
            <Label x:Name="labelGoldAmount" Content="0" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="14,167,0,0" VerticalAlignment="Top" Width="107" Height="31"/>
            <Label x:Name="labelCopperAmount" Content="0" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="127,171,0,0" VerticalAlignment="Top" Width="111" Height="36"/>
            <Label Content="GEMS" Foreground="MediumSeaGreen" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,130,148,0" VerticalAlignment="Top" Height="35" Width="57" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="234,134,0,0" VerticalAlignment="Top" Width="42" Source="/Pictures/gems.png" RenderTransformOrigin="-1.55,0.548"/>
            <Label x:Name="labelGemsAmount" Content="0" Foreground="MediumSeaGreen" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="235,171,0,0" VerticalAlignment="Top" Width="112" Height="36"/>
            <Label Content="IRON" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,42,52,0" VerticalAlignment="Top" Height="31" Width="57" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="329,42,0,0" VerticalAlignment="Top" Width="35" Source="/Pictures/iron.png" RenderTransformOrigin="-1.55,0.548" OpacityMask="Black">
            </Image>
            <Label x:Name="labelIronAmount" Content="0" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="330,82,0,0" VerticalAlignment="Top" Width="112" Height="28" Background="{x:Null}"/>
            <Label Content="LEATHER" Foreground="#FF914C2B" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,130,21,0" VerticalAlignment="Top" Height="34" Width="88" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="35" Margin="329,134,0,0" VerticalAlignment="Top" Width="36" Source="/Pictures/Leather.png" RenderTransformOrigin="-1.55,0.548"/>
            <Label x:Name="labelLeatherAmount" Content="0" Foreground="#FF914C2B" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="330,171,0,0" VerticalAlignment="Top" Width="112" Height="31"/>


            <Label Content="ARMOR" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,212,0,0" VerticalAlignment="Top" Height="27" Width="71"/>
            <Label Content="SWORD" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="170,212,0,0" VerticalAlignment="Top" Height="31" Width="75"/>
            <Image HorizontalAlignment="Left" Height="42" Margin="24,212,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/armor.png"/>
            <Image HorizontalAlignment="Left" Height="27" Margin="122,212,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/sword.png"/>
            <Label x:Name="labelArmorAmount" Content="0" Foreground="#FF94735A" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,233,0,0" VerticalAlignment="Top" Width="107" Height="31"/>
            <Label x:Name="labelSwordAmount" Content="0" Foreground="#696969" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,233,0,0" VerticalAlignment="Top" Width="111" Height="31"/>
            <Label Content="HARNESS" Foreground="Brown" FontSize="12" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,215,138,0" VerticalAlignment="Top" Height="27" Width="67"/>
            <Image HorizontalAlignment="Left" Height="31" Margin="238,212,0,0" VerticalAlignment="Top" Width="32" Source="/LandConquest;component/Pictures/hourseman.png" RenderTransformOrigin="-1.55,0.548"/>
            <Label x:Name="labelHarnessAmount" Content="0" Foreground="Brown" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="238,233,0,0" VerticalAlignment="Top" Width="112" Height="33"/>
            <Label Content="BOW" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="57,316,0,0" VerticalAlignment="Top" Height="31" Width="71"/>
            <Label Content="GEAR" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="170,315,0,0" VerticalAlignment="Top" Height="28" Width="75" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="42" Margin="9,316,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/bow.png"/>
            <Image HorizontalAlignment="Left" Height="42" Margin="122,316,0,0" VerticalAlignment="Top" Width="48" Source="/LandConquest;component/Pictures/gear.png"/>
            <Label x:Name="labelBowAmount" Content="0" Foreground="DarkGoldenrod" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="9,347,0,0" VerticalAlignment="Top" Width="107" Height="32"/>
            <Label x:Name="labelGearAmount" Content="0" Foreground="#FF7B5D42" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="122,347,0,0" VerticalAlignment="Top" Width="111" Height="32"/>
            <Label Content="SPEAR" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,212,48,0" VerticalAlignment="Top" Height="27" Width="62" Background="{x:Null}"/>
            <Image HorizontalAlignment="Left" Height="21" Margin="337,218,0,0" VerticalAlignment="Top" Width="33" Source="/LandConquest;component/Pictures/spear.png" OpacityMask="Black"/>
            <Label x:Name="labelSpearAmount" Content="0" Foreground="SlateGray" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="333,233,0,0" VerticalAlignment="Top" Width="112" Height="31" Background="{x:Null}"/>
            <TextBox x:Name="SwordsToCraft" HorizontalAlignment="Left" Height="23" Margin="182,254,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" BorderBrush="Goldenrod" PreviewTextInput="ArmorToCraft_PreviewTextInput"/>
            <Label x:Name="labelSwordAmount1" Content="1" HorizontalAlignment="Left" Margin="141,252,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Label x:Name="labelSwordAmount2" Content="2" HorizontalAlignment="Left" Margin="141,262,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="160,257,0,0" VerticalAlignment="Top" Width="10" Source="/Pictures/copper.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="160,267,0,0" VerticalAlignment="Top" Width="10" Source="/Pictures/iron.png"/>
            <Image x:Name="craftSword" HorizontalAlignment="Left" Height="30" Margin="182,285,0,0" VerticalAlignment="Top" Width="30" Source="/Pictures/craft.png" MouseDown="craftSword_MouseDown" />
            <TextBox x:Name="ArmorToCraft" HorizontalAlignment="Left" Height="23" Margin="67,254,0,0" TextWrapping="Wrap" Text="" BorderBrush="Goldenrod" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" VerticalAlignment="Top" Width="55" PreviewTextInput="ArmorToCraft_PreviewTextInput" />
            <Image HorizontalAlignment="Left" Height="10" Margin="31,259,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/leather.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="31,269,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/iron.png"/>
            <Label x:Name="labelArmorAmount1" Content="1" HorizontalAlignment="Left" Margin="9,254,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Label x:Name="labelArmorAmount2" Content="3" HorizontalAlignment="Left" Margin="9,264,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <TextBox x:Name="HarnessToCraft" HorizontalAlignment="Left" Height="23" Margin="278,254,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" BorderBrush="Goldenrod" PreviewTextInput="ArmorToCraft_PreviewTextInput"/>
            <TextBox x:Name="SpearToCraft" HorizontalAlignment="Left" Height="23" Margin="372,254,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" BorderBrush="Goldenrod" PreviewTextInput="ArmorToCraft_PreviewTextInput"/>
            <TextBox x:Name="BowToCraft" HorizontalAlignment="Left" Height="23" Margin="67,374,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" BorderBrush="Goldenrod" PreviewTextInput="ArmorToCraft_PreviewTextInput"/>
            <TextBox x:Name="GearToCraft" HorizontalAlignment="Left" Height="23" Margin="182,374,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="55" BorderThickness="1" Background="#311818" Foreground="#e3cd9b" BorderBrush="Goldenrod" PreviewTextInput="ArmorToCraft_PreviewTextInput"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="260,255,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/leather.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="260,265,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/copper.png"/>
            <Label x:Name="labelHarnessAmount1" Content="2" HorizontalAlignment="Left" Margin="238,250,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Label x:Name="labelHarnessAmount2" Content="2" HorizontalAlignment="Left" Margin="238,260,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="355,255,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/wood.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="355,265,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/iron.png"/>
            <Label x:Name="labelSpearAmount1" Content="3" HorizontalAlignment="Left" Margin="333,250,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Label x:Name="labelSpearAmount2" Content="1" HorizontalAlignment="Left" Margin="333,260,0,0" VerticalAlignment="Top" Height="19" Width="29" FontSize="8"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="34,379,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/wood.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="34,389,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/leather.png"/>
            <Label x:Name="labelBowAmount1" Content="2" HorizontalAlignment="Left" Margin="12,374,0,0" VerticalAlignment="Top" Height="23" Width="29" FontSize="8"/>
            <Label x:Name="labelBowAmount2" Content="1" HorizontalAlignment="Left" Margin="12,384,0,0" VerticalAlignment="Top" Height="21" Width="29" FontSize="8"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="163,379,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/wood.png"/>
            <Image HorizontalAlignment="Left" Height="10" Margin="163,389,0,0" VerticalAlignment="Top" Width="10" Source="/LandConquest;component/Pictures/iron.png"/>
            <Label x:Name="labelGearAmount1" Content="3" HorizontalAlignment="Left" Margin="141,374,0,0" VerticalAlignment="Top" Height="23" Width="29" FontSize="8"/>
            <Label x:Name="labelGearAmount2" Content="3" HorizontalAlignment="Left" Margin="141,384,0,0" VerticalAlignment="Top" Height="21" Width="29" FontSize="8"/>
            <Image x:Name="craftArmor" HorizontalAlignment="Left" Height="30" Margin="67,286,0,0" VerticalAlignment="Top" Width="30" Source="/LandConquest;component/Pictures/craft.png" MouseDown="craftArmor_MouseDown"  />
            <Image x:Name="craftHarness" HorizontalAlignment="Left" Height="30" Margin="278,286,0,0" VerticalAlignment="Top" Width="30" Source="/LandConquest;component/Pictures/craft.png" MouseDown="craftHarness_MouseDown"  />
            <Image x:Name="craftSpear" HorizontalAlignment="Left" Height="30" Margin="372,286,0,0" VerticalAlignment="Top" Width="30" Source="/LandConquest;component/Pictures/craft.png" MouseDown="craftSpear_MouseDown"  />
            <Image x:Name="craftBow" HorizontalAlignment="Left" Height="30" Margin="67,413,0,0" VerticalAlignment="Top" Width="30" Source="/LandConquest;component/Pictures/craft.png" MouseDown="craftBow_MouseDown"  />
            <Image x:Name="craftGear" HorizontalAlignment="Left" Height="30" Margin="182,413,0,0" VerticalAlignment="Top" Width="30" Source="/LandConquest;component/Pictures/craft.png" MouseDown="craftGear_MouseDown"  />
        </Grid>
    </Border>
</Window>
