<Window x:Class="LandConquest.Forms.ManufactureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandConquest.Forms"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" BorderThickness="0" 
        Title="ManufactureWindow" Height="550" Width="965" AllowsTransparency="True"
        ShowInTaskbar="False" Background="{x:Null}" Foreground="{x:Null}" SnapsToDevicePixels="True">
    <Grid Height="550" VerticalAlignment="Top" HorizontalAlignment="Left" Width="962">
        <Grid.Background>
            <ImageBrush ImageSource="/Pictures/panel_horizontal1.png" Stretch="Fill" />
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="150" Margin="72,38,0,0" VerticalAlignment="Top" Width="116" Source="/Pictures/sawmill.png"/>
        <Image HorizontalAlignment="Left" Height="153" Margin="339,35,0,0" VerticalAlignment="Top" Width="98" Source="/Pictures/quarry.png"/>
        <Label Content="Sawmill" Foreground="SaddleBrown" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="197,35,0,0" VerticalAlignment="Top" Height="38" Width="104"/>
        <Label Content="Quarry" Foreground="#696969" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="450,35,0,0" VerticalAlignment="Top" Height="43" Width="93"/>
        <Label Foreground="#696969" FontSize="18" FontWeight="Bold" Content="lvl:" HorizontalAlignment="Left" Margin="450,74,0,0" VerticalAlignment="Top" Height="30" Width="35"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="601,38,0,0" VerticalAlignment="Top" Width="84" Source="/Pictures/windmill.png"/>
        <Label Content="Windmill" Foreground="Brown" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="706,38,0,0" VerticalAlignment="Top" Height="39" Width="127"/>
        <Button x:Name="BtnStartProduction"  Content="Start production" HorizontalAlignment="Left" FontWeight="DemiBold" FontSize="20" Margin="427,455,0,0" VerticalAlignment="Top" Width="226" Height="52" Click="BtnStartProduction_Click" BorderBrush="{x:Null}" Foreground="#FFBC9D0C">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Label  Content="Unemployed peasants:" HorizontalAlignment="Left" Margin="93,445,0,0" VerticalAlignment="Top" Height="27" Foreground="#FFBC9D0C"/>
        <Label x:Name="unemployedPeasants" Foreground="ForestGreen" FontSize="14" FontWeight="SemiBold" Content="0" HorizontalAlignment="Left" Margin="262,446,0,0" VerticalAlignment="Top" Width="53"/>
        <Label  Content="Total peasants:" HorizontalAlignment="Left" Margin="93,480,0,0" VerticalAlignment="Top" Height="27" Foreground="#FFBC9D0C"/>
        <Label x:Name="totalPeasants" Foreground="#FFBC9D0C" FontSize="14" FontWeight="SemiBold" Content="0" HorizontalAlignment="Left" Margin="262,481,0,0" VerticalAlignment="Top" Width="53"/>
        <Label  Content="Employed Peasants:" HorizontalAlignment="Left" Margin="93,413,0,0" VerticalAlignment="Top" Height="27" Foreground="#FFBC9D0C"/>
        <Label x:Name="employedPeasants" Foreground="DarkRed" FontSize="14" FontWeight="SemiBold" Content="0" HorizontalAlignment="Left" Margin="262,411,0,0" VerticalAlignment="Top" Width="53"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="225,407,0,0" VerticalAlignment="Top" Width="30" Source="/Pictures/peasant.png"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="225,442,0,0" VerticalAlignment="Top" Width="30" Source="/Pictures/Peasant2.png"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="225,477,0,0" VerticalAlignment="Top" Width="30" Source="/Pictures/peasants_total.png"/>
        <Label x:Name="Quarrylvl" Foreground="#696969" FontSize="18" FontWeight="Bold" Content="1" HorizontalAlignment="Left" Margin="482,74,0,0" VerticalAlignment="Top" Height="30" Width="22"/>
        <ProgressBar x:Name="PbQuarry" HorizontalAlignment="Left" Height="16" Margin="450,111,0,0" VerticalAlignment="Top" Width="115" Minimum="0" Maximum="0" Background="#FF9DDBA9" BorderBrush="#FF9DDBA4" Foreground="#696969"/>
        <Label Content="{Binding ElementName=PbQuarry, Path=Value, StringFormat={}{0:0}}" HorizontalAlignment="Left" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="487,109,0,0"  Foreground="White" FontFamily="Open Sans" Height="20" Width="43"/>
        <Label Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="lvl:" HorizontalAlignment="Left" Margin="193,72,0,0" VerticalAlignment="Top" Height="30" Width="46"/>
        <Label x:Name="Sawmilllvl" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="1" HorizontalAlignment="Left" Margin="230,72,0,0" VerticalAlignment="Top" Height="30" Width="22"/>
        <ProgressBar x:Name="PbSawmill" Foreground="SaddleBrown" HorizontalAlignment="Left" Height="16" Margin="197,111,0,0" VerticalAlignment="Top" Width="116" Minimum="0" Maximum="0"/>
        <Label Foreground="Brown" FontSize="18" FontWeight="Bold" Content="lvl:" HorizontalAlignment="Left" Margin="706,72,0,0" VerticalAlignment="Top" Height="30" Width="35"/>
        <Label x:Name="Windmilllvl" Foreground="Brown" FontSize="18" FontWeight="Bold" Content="1" HorizontalAlignment="Left" Margin="733,72,0,0" VerticalAlignment="Top" Height="30" Width="21"/>
        <ProgressBar x:Name="PbWindmill" Foreground="Brown" HorizontalAlignment="Left" Height="16" Margin="709,111,0,0" VerticalAlignment="Top" Width="110" Minimum="0" Maximum="0"/>
        <Slider x:Name="sliderQuarry" Foreground="#696969" Maximum="200" HorizontalAlignment="Left" Margin="450,132,0,0" VerticalAlignment="Top" Height="33" Width="115" ValueChanged="sliderQuarry_ValueChanged" PreviewMouseLeftButtonUp="sliderQuarry_PreviewMouseLeftButtonUp"/>
        <Slider x:Name="sliderSawmill" Foreground="SaddleBrown" Maximum="200" HorizontalAlignment="Left" Margin="198,132,0,0" VerticalAlignment="Top" Height="16" Width="115" PreviewMouseLeftButtonUp="sliderSawmill_PreviewMouseLeftButtonUp" ValueChanged="sliderSawmill_ValueChanged"/>
        <Slider x:Name="sliderWindmill" Foreground="Brown" Maximum="200" HorizontalAlignment="Left" Margin="709,132,0,0" VerticalAlignment="Top" Height="16" Width="110" PreviewMouseLeftButtonUp="sliderWindmill_PreviewMouseLeftButtonUp" ValueChanged="sliderWindmill_ValueChanged"/>
        <Label Content="{Binding Value, ElementName=PbSawmill, StringFormat=\{0:0\}}" HorizontalAlignment="Left" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="233,109,0,0"  Foreground="White" FontFamily="Open Sans" Height="20" Width="43"/>
        <Label Content="{Binding Value, ElementName=PbWindmill, StringFormat=\{0:0\}}" HorizontalAlignment="Left" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="743,109,0,0"  Foreground="White" FontFamily="Open Sans" Height="20" Width="41"/>
        <Label Foreground="#696969" FontSize="18" FontWeight="Bold" Content="p/h:" HorizontalAlignment="Left" Margin="504,74,0,0" VerticalAlignment="Top" Height="30" Width="47"/>
        <Label x:Name="QuarryProdValueHour" Foreground="#696969" FontSize="18" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="552,74,0,0" VerticalAlignment="Top" Height="30" Width="32"/>
        <Label Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="p/h:" HorizontalAlignment="Left" Margin="252,72,0,0" VerticalAlignment="Top" Height="32" Width="45"/>
        <Label x:Name="SawmillProdValueHour" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="297,72,0,0" VerticalAlignment="Top" Height="32" Width="37"/>
        <Label Foreground="Brown" FontSize="18" FontWeight="Bold" Content="p/h:" HorizontalAlignment="Left" Margin="754,72,0,0" VerticalAlignment="Top" Height="30" Width="41"/>
        <Label x:Name="WindmillProdValueHour" Foreground="Brown" FontSize="18" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="795,72,0,0" VerticalAlignment="Top" Height="30" Width="38"/>
        <Button x:Name="buttonQuarryUpgrade" Content="Upgrade" FontSize="12" HorizontalAlignment="Left" Margin="450,157,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="buttonQuarryUpgrade_Click" BorderBrush="{x:Null}" Foreground="#FFBC9D0C">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="buttonSawmillUpgrade" Content="Upgrade" FontSize="12" HorizontalAlignment="Left" Margin="198,157,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="buttonSawmillUpgrade_Click" BorderBrush="{x:Null}" Foreground="#FFBC9D0C">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="buttonWindmillUpgrade" Content="Upgrade" FontSize="12" HorizontalAlignment="Left" Margin="709,157,0,0" VerticalAlignment="Top" Width="110" Height="31" Click="buttonWindmillUpgrade_Click" BorderBrush="{x:Null}" Foreground="#FFBC9D0C">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="button_close" HorizontalAlignment="Left" Margin="859,19,0,0" VerticalAlignment="Top" Width="37" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="button_close_Click">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/button_close_cross_wood.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="141" Margin="85,252,0,0" VerticalAlignment="Top" Width="135" Source="/LandConquest;component/Pictures/sawmill.png"/>
        <Label x:Name="buildingName1" Content="Namebuild1" Foreground="SaddleBrown" FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" Margin="221,235,0,0" VerticalAlignment="Top" Height="43" Width="185"/>
        <Label x:Name="buildinglvl1" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="lvl:" HorizontalAlignment="Left" Margin="221,277,0,0" VerticalAlignment="Top" Height="30" Width="46"/>
        <Label x:Name="building1LvlAmount" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="1" HorizontalAlignment="Left" Margin="258,277,0,0" VerticalAlignment="Top" Height="30" Width="22"/>
        <ProgressBar x:Name="PbBuilding1" Foreground="SaddleBrown" HorizontalAlignment="Left" Height="16" Margin="225,316,0,0" VerticalAlignment="Top" Width="116" Minimum="0" Maximum="0"/>
        <Slider x:Name="sliderBuilding1" Foreground="SaddleBrown" Maximum="200" HorizontalAlignment="Left" Margin="226,337,0,0" VerticalAlignment="Top" Height="16" Width="115" PreviewMouseLeftButtonUp="sliderBuilding1_PreviewMouseLeftButtonUp" ValueChanged="sliderBuilding1_ValueChanged"/>
        <Label Content="{Binding Value, ElementName=PbBuilding1, StringFormat=\{0:0\}}" HorizontalAlignment="Left" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="261,314,0,0"  Foreground="White" FontFamily="Open Sans" Height="20" Width="43"/>
        <Label x:Name="buildingph1" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="p/h:" HorizontalAlignment="Left" Margin="280,277,0,0" VerticalAlignment="Top" Height="32" Width="45"/>
        <Label x:Name="building1ProdValueHour" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="325,277,0,0" VerticalAlignment="Top" Height="32" Width="40"/>
        <Button x:Name="buttonBuilding1Upgrade" Content="Upgrade" FontSize="12" HorizontalAlignment="Left" Margin="226,362,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="buttonSawmillUpgrade_Click" Foreground="#FFBC9D0C" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="141" Margin="427,248,0,0" VerticalAlignment="Top" Width="138" Source="/LandConquest;component/Pictures/sawmill.png"/>
        <Label x:Name="buildingName2" Content="Namebuild2" Foreground="SaddleBrown" FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" Margin="575,235,0,0" VerticalAlignment="Top" Height="43" Width="185"/>
        <Label x:Name="buildinglvl2" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="lvl:" HorizontalAlignment="Left" Margin="575,277,0,0" VerticalAlignment="Top" Height="30" Width="46"/>
        <Label x:Name="building2lvlAmount" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="1" HorizontalAlignment="Left" Margin="612,277,0,0" VerticalAlignment="Top" Height="30" Width="22"/>
        <ProgressBar x:Name="PbBuilding2" Foreground="SaddleBrown" HorizontalAlignment="Left" Height="16" Margin="579,316,0,0" VerticalAlignment="Top" Width="116" Minimum="0" Maximum="0"/>
        <Slider x:Name="sliderBuilding2" Foreground="SaddleBrown" Maximum="200" HorizontalAlignment="Left" Margin="580,337,0,0" VerticalAlignment="Top" Height="16" Width="115" PreviewMouseLeftButtonUp="sliderBuilding2_PreviewMouseLeftButtonUp" ValueChanged="sliderBuilding2_ValueChanged"/>
        <Label Content="{Binding Value, ElementName=PbBuilding2, StringFormat=\{0:0\}}" HorizontalAlignment="Left" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="615,314,0,0"  Foreground="White" FontFamily="Open Sans" Height="20" Width="43"/>
        <Label x:Name="buildingph2" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="p/h:" HorizontalAlignment="Left" Margin="634,277,0,0" VerticalAlignment="Top" Height="32" Width="45"/>
        <Label x:Name="building2ProdValueHour" Foreground="SaddleBrown" FontSize="18" FontWeight="Bold" Content="0" HorizontalAlignment="Left" Margin="679,277,0,0" VerticalAlignment="Top" Height="32" Width="40"/>
        <Button x:Name="buttonBuilding2Upgrade" Content="Upgrade" FontSize="12" HorizontalAlignment="Left" Margin="580,362,0,0" VerticalAlignment="Top" Width="115" Height="31" Click="buttonSawmillUpgrade_Click" Foreground="#FFBC9D0C" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/LandConquest;component/Pictures/epic_long_brown_button.png"/>
            </Button.Background>
        </Button>
        <Label Content="Working now:" HorizontalAlignment="Left" Height="23" Margin="93,366,0,0" VerticalAlignment="Top" Width="85" Foreground="#FFBC9D0C"/>
        <Label x:Name="WorkingNowB1" Content="0" FontSize="8"  HorizontalAlignment="Left" Margin="184,371,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.433,2.022" Width="42" Foreground="#FFBC9D0C" Background="{x:Null}"/>
        <Label Content="Working now:" HorizontalAlignment="Left" Height="23" Margin="427,366,0,0" VerticalAlignment="Top" Width="86" Background="{x:Null}" Foreground="#FFBC9D0C"/>
        <Label x:Name="WorkingNowB2" Content="0" FontSize="8"  HorizontalAlignment="Left" Margin="514,370,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.433,2.022" Width="43" Foreground="#FFBC9D0C"/>

    </Grid>
</Window>
